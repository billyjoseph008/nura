{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "paths": {
      "@nura/core": ["packages/core/src/index.ts"],
      "@nura/core/*": ["packages/core/src/*"],
      "@nura/dom": ["packages/dom/src/index.ts"],
      "@nura/dom/*": ["packages/dom/src/*"],
      "@nura/plugin-fuzzy": ["packages/plugin-fuzzy/src/index.ts"],
      "@nura/plugin-fuzzy/*": ["packages/plugin-fuzzy/src/*"],
      "@nura/plugin-voice": ["packages/plugin-voice/src/index.ts"],
      "@nura/plugin-voice/*": ["packages/plugin-voice/src/*"]
    }
  },
  "include": ["src/**/*"]
}
