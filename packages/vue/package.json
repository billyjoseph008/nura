{
  "name": "@nura/vue",
  "version": "0.1.0",
  "description": "Vue adapter for Nura.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nura-dev/nura.git",
    "directory": "packages/vue"
  },
  "homepage": "https://github.com/nura-dev/nura/tree/main/packages/vue",
  "bugs": {
    "url": "https://github.com/nura-dev/nura/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --treeshake --minify --external @nura/core,@nura/dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --treeshake --watch --external @nura/core,@nura/dom",
    "lint": "eslint . --ext .ts,.tsx,.mts,.cts,.vue",
    "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts,.vue --fix",
    "test": "echo \"(todo)\"",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": ["nura", "vue", "directives", "composables"],
  "dependencies": {
    "@nura/core": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">=3.3.0",
    "@nura/core": ">=0.1.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.4.0"
  }
}
