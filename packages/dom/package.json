{
  "name": "@nura/dom",
  "version": "0.1.0",
  "description": "DOM indexing and scanning for Nura.js",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nura-dev/nura.git",
    "directory": "packages/dom"
  },
  "homepage": "https://github.com/nura-dev/nura/tree/main/packages/dom",
  "bugs": {
    "url": "https://github.com/nura-dev/nura/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --treeshake --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --treeshake --watch",
    "lint": "eslint . --ext .ts,.tsx,.mts,.cts",
    "lint:fix": "eslint . --ext .ts,.tsx,.mts,.cts --fix",
    "clean": "rm -rf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "keywords": ["nura", "dom", "indexing", "scanner"],
  "dependencies": {
    "@nura/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  }
}
