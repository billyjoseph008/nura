{
  "name": "@nura/dom",
  "version": "0.1.0",
  "description": "DOM indexing and scanning for Nura.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --treeshake --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --treeshake --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["nura", "dom", "indexing", "scanner"],
  "license": "MIT",
  "dependencies": {
    "@nura/core": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.5.0"
  }
}
