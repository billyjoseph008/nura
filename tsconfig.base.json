{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@nura/core": [
        "packages/core/dist/index.d.ts",
        "packages/core/src/index.ts"
      ],
      "@nura/core/*": [
        "packages/core/dist/*",
        "packages/core/src/*"
      ],
      "@nura/dom": [
        "packages/dom/dist/index.d.ts",
        "packages/dom/src/index.ts"
      ],
      "@nura/dom/*": [
        "packages/dom/dist/*",
        "packages/dom/src/*"
      ],
      "@nura/react": [
        "packages/react/dist/index.d.ts",
        "packages/react/src/index.ts"
      ],
      "@nura/react/*": [
        "packages/react/dist/*",
        "packages/react/src/*"
      ],
      "@nura/vue": [
        "packages/vue/dist/index.d.ts",
        "packages/vue/src/index.ts"
      ],
      "@nura/vue/*": [
        "packages/vue/dist/*",
        "packages/vue/src/*"
      ],
      "@nura/svelte": [
        "packages/svelte/dist/index.d.ts",
        "packages/svelte/src/index.ts"
      ],
      "@nura/svelte/*": [
        "packages/svelte/dist/*",
        "packages/svelte/src/*"
      ],
      "@nura/plugin-voice": [
        "packages/plugin-voice/dist/index.d.ts",
        "packages/plugin-voice/src/index.ts"
      ],
      "@nura/plugin-voice/*": [
        "packages/plugin-voice/dist/*",
        "packages/plugin-voice/src/*"
      ],
      "@nura/plugin-fuzzy": [
        "packages/plugin-fuzzy/dist/index.d.ts",
        "packages/plugin-fuzzy/src/index.ts"
      ],
      "@nura/plugin-fuzzy/*": [
        "packages/plugin-fuzzy/dist/*",
        "packages/plugin-fuzzy/src/*"
      ],
      "@nura/devtools-lexicon": [
        "packages/devtools-lexicon/dist/index.d.ts",
        "packages/devtools-lexicon/src/index.ts"
      ],
      "@nura/devtools-lexicon/*": [
        "packages/devtools-lexicon/dist/*",
        "packages/devtools-lexicon/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "coverage"
  ]
}
