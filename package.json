{
  "name": "nura",
  "version": "0.1.0",
  "private": true,
  "description": "Make your app breathe - AI-friendly web applications",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nura-dev/nura.git"
  },
  "homepage": "https://github.com/nura-dev/nura",
  "bugs": {
    "url": "https://github.com/nura-dev/nura/issues"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r --filter @nura/* run build",
    "clean": "pnpm -r exec rimraf dist && turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "lint": "pnpm -r --if-present lint",
    "test": "turbo run test",
    "changeset": "changeset",
    "release": "changeset version && pnpm -r build && changeset publish"
  },
  "dependencies": {
    "@nura/core": "workspace:*",
    "@nura/dom": "workspace:*",
    "@nura/react": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "next": "15.2.4",
    "react": "^19",
    "react-dom": "^19",
    "svelte": "latest",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "latest",
    "vue": "latest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8.5",
    "prettier": "^3.3.0",
    "tailwindcss": "4.1.14",
    "turbo": "^2.0.0",
    "typescript": "^5",
    "rimraf": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.0.0"
  }
}
